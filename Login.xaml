<Window x:Class="WPFCLEAN.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCLEAN"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="500" Background="#04c582" WindowStartupLocation="CenterScreen">
    <Border Background="DarkSlateGray" Height="500" Width="400" CornerRadius="15">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" 
                VerticalAlignment="Center" MinWidth="300" MinHeight="400">

            <Label Content="LOG IN" HorizontalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="#FF95F4E5"/>
            <ComboBox Name="cb" FontSize="35" SelectionChanged="cb_SelectionChanged"/>
            <PasswordBox Name="txtSifra" PasswordChar="*" FontSize="30" Keyboard.PreviewKeyDown="txtSifra_PreviewKeyDown"/>
            
            <Button Name="btPotvrdi" Content="Prijavi se" FontSize="40" Margin="5 15 5 0" Click="btPotvrdi_Click"/>
        </StackPanel>
    </Border>
</Window>
