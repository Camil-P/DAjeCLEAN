<Window x:Class="WPFCLEAN.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCLEAN"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="500" Background="#04c582">
    <Border Background="DarkSlateGray" Height="500" Width="400" CornerRadius="15">
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" 
                VerticalAlignment="Center" MinWidth="300" MinHeight="400">

            <Label Content="LOG IN" HorizontalAlignment="Center" FontSize="40" FontWeight="Bold" Foreground="#FF95F4E5"/>
            <ComboBox Name="cb" FontSize="35" SelectionChanged="cb_SelectionChanged"/>
            <TextBox Name="txtSifra" FontSize="30"/>

            <StackPanel Orientation="Horizontal">
                <Button Name="btPotvrdi" Content="Potvrdi" FontSize="30" Margin="0 0 23 0" Click="btPotvrdi_Click"/>
                <Button Name="btKreiraj" Content="Kreiraj nalog" FontSize="30" Margin="10 0 0 0" Click="btKreiraj_Click"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
